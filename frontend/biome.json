{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"files": {
		"includes": [
			"**/src/**/*.ts",
			"**/src/**/*.tsx",
			"**/src/**/*.js",
			"**/src/**/*.jsx",
			"**/src/**/*.css"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noImportantStyles": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 100
	},
	"css": {
		"parser": {
			"cssModules": false,
			"allowWrongLineComments": false,
			"tailwindDirectives": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 1
		}
	}
}
